CREATE TABLE [dbo].[Student](
	[User_ID] [int] NOT NULL,
	[Name] [nvarchar](150) NOT NULL,
	[Date_of_Birth] [date] NOT NULL,
	[Gender] [bit] NOT NULL,
	[GPA] [decimal](5, 2) NOT NULL,
	[School] [nvarchar](150) NOT NULL,
	[University] [nvarchar](150) NULL,
	[City] [nvarchar](100) NOT NULL,
	[Weight] [decimal](5, 2) NULL,
	[Height] [decimal](5, 2) NOT NULL,
	[Status] [bit] NOT NULL,
	[Phone_Number] [nvarchar](20) NOT NULL,
	[Bio] [text] NULL,
	[Expected_Graduation_Year] [int] NOT NULL,
	[Applicant_Type] [bit] NOT NULL,
	[Primary_Sport_ID] [int] NOT NULL,
	[Health_Issues] [text] NULL,
	[Major_1] [nvarchar](100) NOT NULL,
	[Major_2] [nvarchar](100) NOT NULL,
	[Major_3] [nvarchar](100) NOT NULL,
 CONSTRAINT [PK_Student] PRIMARY KEY CLUSTERED 
(
	[User_ID] ASC
)WITH (PAD_INDEX = OFF, STATISTICS_NORECOMPUTE = OFF, IGNORE_DUP_KEY = OFF, ALLOW_ROW_LOCKS = ON, ALLOW_PAGE_LOCKS = ON, OPTIMIZE_FOR_SEQUENTIAL_KEY = OFF) ON [PRIMARY]
